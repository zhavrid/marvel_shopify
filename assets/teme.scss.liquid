.block_team{
    margin: 0 auto;
    max-width: 1100px;
}
.team{
    padding-top: 96px;
    color: black;
    font-size: 55px;
    font-weight: 700;
}
.line_team{
    background-color: #F9D023;
    width: 60px;
    height: 3px;
}

.twoblock{
    display: flex;
    justify-content:  space-between;
    margin-top: 56px;
    padding-bottom: 96px;
    line-height: calc(1 + 0.1 / var(--font-body-scale));
    .two_bloks{
        position: relative;
        padding-bottom: 240px;
        width: 540px;
        box-shadow: 0 0 15px rgba(0,0,0,.2);
        height: 892px;
        .info_img{
            display: flex;
            justify-content: space-between;
        }

        .name_arrow{
            padding-top: 32px;
            padding-left: 64px;
            display: flex;
        }
        .meet_team{
            font-size: 14px;
            color: #F9D023;
            line-height: 18px;
        }
        .arrow_meet{
            padding-left: 24px;
        }
        .name_team{
            padding-top: 48px;
            padding-left: 64px;
            font-size: 40px;
            color: #000;;
            font-weight: 700;
            width: 150px;
            line-height: calc(1 + 0.2 / var(--font-body-scale));
        }
        .role{       
            padding-top: 16px;
            padding-left: 64px;
            font-size: 14px;
            color: #000;
            line-height: 18px;
        }
        .img_team{
            padding-left: 20px;
        }
        .discription{
            margin: 0 auto;
            width: 412px;
            padding-top: 40px;
            font-size: 18px;
            color: #000;
            line-height: calc(1 + 0.3 / var(--font-body-scale));
        }
        .history{
            padding-top: 40px;
            padding-left: 64px;
            font-size: 24px;
            color: #000;
            font-weight: 700;
        }
        .list_history{
            margin: 0 auto;
            width: 398px;
            color: #000;
            line-height: calc(1 + 0.3 / var(--font-body-scale));
            ul{
                padding-left: 10px;
                li{
                    list-style-type: square;
                }
            }

        }
        .bottom{
            position: absolute;
            bottom: 30px;
            width: 100%;
        }
        .education{
            padding-left: 64px;
            font-size: 24px;
            color: #000;
            font-weight: 700;
        }
        .list_education{
            color: #000;
            padding-left: 64px;
            line-height: calc(1 + 0.3 / var(--font-body-scale));
            ul{
                padding-left: 10px;
                li{
                    list-style-type: square;
                }
            }
        }
        .flex_vector{
            display: flex;
            justify-content:  space-between;
        }
        .two_vector{
            display: flex;
            justify-content: flex-end;
            .pic_two{
                padding-left: 22px;
                padding-right: 42px;
            }
        }
    }

}